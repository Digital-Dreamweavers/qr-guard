<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PermissionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/text_perm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableTint="?attr/colorSecondary"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:text="@string/permissionsActivity_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="?attr/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:drawableTop="@drawable/baseline_checklist_64"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/text_perm_camera_explainer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="@string/permissionsActivity_camera_explainer"
            android:textColor="?attr/colorPrimary"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/round_camera_48"
            app:drawableTint="?attr/colorSecondary"
            android:drawablePadding="10dp"
            />

        <TextView
            android:id="@+id/text_location_explainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="@string/permissionsActivity_location_explainer"
            android:textColor="?attr/colorPrimary"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/baseline_assistant_navigation_48"
            app:drawableTint="?attr/colorSecondary"
            android:drawablePadding="10dp" />

        <TextView
            android:id="@+id/text_appSettings_explainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="@string/permissionsActivity_appSettings"
            android:textColor="?attr/colorPrimary"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/button_grant_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="88dp"
            android:gravity="center"
            android:text="@string/permissionsActivity_grant_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.613"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>